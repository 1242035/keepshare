<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#f4870e"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:id="@+id/field_list"
                  android:background="@android:drawable/picture_frame"
                  android:layout_width="match_parent"
                  android:layout_margin="2dp"
                  android:layout_marginBottom="8dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" >
        <com.hanhuy.android.keepshare.StandardEditView
                android:id="@+id/edit_title"
                android:hint="Title"
                app:first="true"
                android:icon="@drawable/i00_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.hanhuy.android.keepshare.StandardEditView
                android:id="@+id/edit_username"
                android:hint="Username"
                android:icon="@drawable/ic_account_box_black_36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.hanhuy.android.keepshare.StandardEditView
                android:id="@+id/edit_password"
                android:hint="Password"
                android:password="true"
                android:icon="@drawable/ic_lock_outline_black_36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.hanhuy.android.keepshare.StandardEditView
                android:id="@+id/edit_url"
                android:hint="URL"
                android:icon="@drawable/ic_link_black_36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.hanhuy.android.keepshare.StandardEditView
                android:id="@+id/edit_notes"
                android:hint="Notes"
                app:longform="true"
                android:icon="@drawable/ic_speaker_notes_black_36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>