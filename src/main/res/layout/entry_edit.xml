<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_alignParentTop="true"
            android:layout_above="@+id/delete"
            android:layout_alignWithParentIfMissing="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:id="@+id/field_list"
                      android:background="@android:drawable/picture_frame"
                      android:layout_width="match_parent"
                      android:layout_margin="2dp"
                      android:layout_marginBottom="8dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" >
            <com.hanhuy.android.keepshare.GroupEditView
                    android:id="@+id/edit_group"
                    app:first="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <com.hanhuy.android.keepshare.StandardEditView
                    android:id="@+id/edit_title"
                    android:hint="Title"
                    android:icon="@drawable/i00_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <com.hanhuy.android.keepshare.StandardEditView
                    android:id="@+id/edit_username"
                    android:hint="Username"
                    android:icon="@drawable/ic_account_box_black_36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <com.hanhuy.android.keepshare.StandardEditView
                    android:id="@+id/edit_password"
                    android:hint="Password"
                    android:password="true"
                    android:icon="@drawable/ic_lock_outline_black_36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <com.hanhuy.android.keepshare.StandardEditView
                    android:id="@+id/edit_url"
                    android:hint="URL"
                    android:icon="@drawable/ic_link_black_36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <com.hanhuy.android.keepshare.StandardEditView
                    android:id="@+id/edit_notes"
                    android:hint="Notes"
                    app:longform="true"
                    android:icon="@drawable/ic_speaker_notes_black_36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <ImageButton
                    style="@android:style/Widget.DeviceDefault.Light.ActionButton"
                    android:id="@+id/new_field_button"
                    android:layout_gravity="left|center"
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_add_black_36dp"
                    android:contentDescription="Custom Field"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="12dp"
                    />
        </LinearLayout>

    </ScrollView>
    <Button
            android:id="@+id/delete"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="Delete"/>
</RelativeLayout>
