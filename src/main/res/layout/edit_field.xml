<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:layout="@layout/browse"
        android:layout_width="match_parent"
        android:layout_height="48dp">

    <View android:id="@+id/field_divider"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_gravity="top"
          android:background="#cccccc"
          android:layout_marginLeft="72dp"
          android:layout_marginBottom="12dp"
            />
    <ImageView android:id="@+id/field_icon"
               android:layout_gravity="left|center"
               android:gravity="center"
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:src="@drawable/ic_extension_black_36dp"
               android:contentDescription="Custom Field"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="16dp"
               android:layout_marginBottom="12dp"
            />
    <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="72dp"
            android:layout_gravity="left|center">
        <EditText android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:singleLine="true"
                  android:gravity="center|left"
                  android:ellipsize="none"
                  android:inputType="textVisiblePassword"
                  android:background="@null"
                  android:textAppearance="?android:textAppearanceMedium"
                  android:id="@+id/custom_field"/>
    </android.support.design.widget.TextInputLayout>
    <CheckBox android:id="@+id/field_visibility"
              android:visibility="gone"
              android:layout_marginBottom="12dp"
              android:layout_marginTop="12dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="8dp"
              android:button="@drawable/visibility_checkbox"
              android:layout_gravity="right|center"
              android:gravity="center"
            />
</merge>
